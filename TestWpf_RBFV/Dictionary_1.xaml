    <DrawingBrush x:Key="CrossPointer" Stretch="Fill" Viewport="0,0,1,1">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <GeometryDrawing Geometry="M0,0.5 1.0,0.5">
                    <GeometryDrawing.Pen>
                        <Pen Thickness="0.1" Brush="{StaticResource CaretBrush}"/>
                    </GeometryDrawing.Pen>
                </GeometryDrawing>
                <GeometryDrawing Geometry="M0.5,0 0.5,1.0">
                    <GeometryDrawing.Pen>
